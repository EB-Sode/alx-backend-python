pipeline {
    agent {
        docker {
            image 'python:3.10'
            args '-u root'
        }
    }

    environment {
        REPORT_DIR = 'messaging_app/reports'
        REPORT_FILE = "${REPORT_DIR}/test-results.xml"
        DOCKER_IMAGE = 'etiemana/messaging_app'
        DOCKER_CREDENTIALS_ID = 'dockerhub-credentials'
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo 'Cloning repository from GitHub...'
                git branch: 'main',
                    url: 'https://github.com/EB-Sode/alx-backend-python.git',
                    credentialsId: 'github-credentials'
                dir('messaging_app') {
                    echo 'Using messaging_app subdirectory...'
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                echo 'Installing Python dependencies...'
                sh '''
                    python -m pip install --upgrade pip
                    pip3 install -r messaging_app/requirements.txt
                '''
            }
        }

        stage('Run Tests') {
            steps {
                echo 'Running pytest and generating JUnit XML report...'
                sh '''
                    mkdir -p ${REPORT_DIR}
                    pytest ${APP_DIR}/tests --junitxml=${REPORT_FILE} || true
                '''
            }
        }

        stage('Publish Test Report') {
            steps {
                echo 'üìä Publishing test results...'
                junit allowEmptyResults: true, testResults: "${REPORT_FILE}"
            }
        }
        stage('Build Docker Image') {
            when {
                expression { currentBuild.currentResult == 'SUCCESS' }
            }
            steps {
                echo 'Building Docker image for messaging_app...'
                script {
                    def commitHash = sh(script: 'git rev-parse --short HEAD', returnStdout: true).trim()
                    sh "docker build -t ${DOCKER_IMAGE}:latest -t ${DOCKER_IMAGE}:${commitHash} -f Dockerfile ."
                }
            }
        }

        stage('Push Docker Image') {
            when {
                expression { currentBuild.currentResult == 'SUCCESS' }
            }
            steps {
                echo 'Pushing Docker image to Docker Hub...'
                script {
                    withCredentials([usernamePassword(credentialsId: "${DOCKER_CREDENTIALS_ID}", passwordVariable: 'DOCKER_PASS', usernameVariable: 'DOCKER_USER')]) {
                        sh '''
                            echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin
                            docker push ${DOCKER_IMAGE}:latest
                            docker push ${DOCKER_IMAGE}:$(git rev-parse --short HEAD)
                            docker logout
                        '''
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'Archiving test report artifacts...'
            archiveArtifacts artifacts: "${REPORT_FILE}", fingerprint: true
        }
        success {
            echo '‚úÖ Build, Test, and Docker pushed successfully!'
        }
        failure {
            echo '‚ùå Build failed. Check logs for errors.'
        }
    }
}
